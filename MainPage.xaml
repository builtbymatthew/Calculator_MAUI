<?xml version="1.0" encoding="utf-8" ?>

    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaclulatorMAUI.MainPage"
             BackgroundColor="SkyBlue">

        <ScrollView>

        <VerticalStackLayout
            Spacing = "10"
            Padding="60,0" 
            VerticalOptions = "Center">
            <Label
                TextColor="Magenta" 
                Text="Calculator"
                FontSize="50"
                HorizontalOptions="Center"/>
            <Entry x:Name="entryNum1"
                   FontSize="20" 
                   TextColor="White"
                   Placeholder="Enter Number" 
                   Keyboard="Numeric"
                   TextChanged="entryNum1_TextChanged" />
            <Entry x:Name="entryNum2"
                   FontSize="20"
                   TextColor="White"
                   Placeholder="Enter Number" 
                   Keyboard="Numeric"
                   TextChanged="entryNum2_TextChanged" />
            <Label x:Name="txtAnswer"
                   FontSize="20"
                   TextColor="White"
                   Text="Answer"/>
            <HorizontalStackLayout
                Spacing="10">
                <Button x:Name="btnAdd"
                    TextColor="Magenta" 
                    Padding="28,0"
                    Text="+"
                    FontSize="40"
                    Clicked="btnAdd_Clicked"/>
                <Button x:Name="btnSubtract"
                    TextColor="Magenta" 
                    Padding="33,0"
                    Text="-"
                    FontSize="40"
                    Clicked="btnSubtract_Clicked"/>
                <Button x:Name="btnSquare"
                    TextColor="Magenta" 
                    Padding="30,0"
                    Text="^"
                    FontSize="40"
                    Clicked="btnSquare_Clicked"/>
                <Button x:Name="btnSqrt"
                    TextColor="Magenta" 
                    Padding="30,0"
                    Text="sqrt"
                    FontSize="40"
                    Clicked="btnSqrt_Clicked"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout
                Spacing="10">
                <Button x:Name="btnMultiply"
                    TextColor="Magenta" 
                    Padding="29,0" 
                    Text="x"
                    FontSize="40"
                    Clicked="btnMultiply_Clicked"/>
            <Button x:Name="btnDivide"
                    TextColor="Magenta" 
                    Padding="32,0"
                    Text="/"
                    FontSize="40"
                    Clicked="btnDivide_Clicked"/>
            <Button x:Name="btnExp"
                    TextColor="Magenta" 
                    Padding="30,0"
                    Text="e"
                    FontSize="40"
                    Clicked="btnExp_Clicked"/>
            <Button x:Name="btnRndm"
                    TextColor="Magenta" 
                    Padding="23,0"
                    Text="rand"
                    FontSize="40"
                    Clicked="btnRndm_Clicked"/>
            </HorizontalStackLayout>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

